---
import '@/styles/main.css';
import ButtonsWrapAlpahbet from "../components/ButtonsWrapAlpahbet.astro";
import ButtonsWrapNewGame from "../components/ButtonsWrapNewGame.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NUEVA PARTIDA</title>
  </head>
  <body class="fade-in">
    <header>
      <h1 class="mainTitle">PON TU NOMBRE</h1>
    </header>
    <main class="mainContent">
      <ButtonsWrapAlpahbet />
      <section class="nameImputContainer">
          <span class="letterSlot">_</span>
          <span class="letterSlot">_</span>
          <span class="letterSlot">_</span>
          <span class="letterSlot">_</span>
          <span class="letterSlot">_</span>
          <span class="letterSlot">_</span>
      </section>
    </main>
    <footer>
      <ButtonsWrapNewGame />
    </footer>
    <script src="/src/scripts/newGame.js"></script>
  </body>
</html>

<style>
  .fade-out {
    animation: fadeOut 1s ease-out both;
  }
  .fade-in {
    animation: fadeIn 1s ease-in both;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
  @keyframes fadeOut {
		from {
			opacity: 1;
		}
		to {
			opacity: 0;
		}
	}


  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: black;
  }

	body{
		background-image: url('../assets/img/shadow_01.jpg');
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
		display: flex;
		flex-direction: column;
	}
  .mainTitle{
    color: thistle;
    text-align: center;
    font-size: 4rem;
    padding: 0;
    margin: 0.3em;
    font-weight: 800;
  }
  .mainContent {
  }

  .nameImputContainer{
    margin-block: 0.5em;
    text-align: center;
    font-size: 5rem;
    font-weight: 800;
    color: white;
    text-shadow: 0 0 3px white;

    .letterSlot{
      inline-size: 5rem;
      display: inline-block;
    }
  }

  footer{
  }
  
</style>